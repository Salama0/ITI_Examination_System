# Environment Variables (NEVER commit passwords/connection strings!)
.env
.env.local
.env.development
.env.production
*.env

# Database Connection Strings (IMPORTANT!)
**/appsettings.Development.json
**/appsettings.Production.json
config/database.config.js
config/secrets.json

# Node.js (if using Node.js backend)
node_modules/
npm-debug.log*
yarn-debug.log*
yarn-error.log*
package-lock.json
yarn.lock
.pnpm-debug.log*

# .NET (if using ASP.NET backend)
bin/
obj/
*.user
*.suo
*.cache
*.log
.vs/
*.DotSettings.user

# Python (if using Python backend)
__pycache__/
*.py[cod]
*$py.class
*.so
.Python
venv/
env/
ENV/
*.egg-info/
dist/
build/

# IDEs
.vscode/
.idea/
*.swp
*.swo
*~
.DS_Store

# Build outputs
dist/
build/
out/
*.min.js
*.min.css

# Logs
logs/
*.log
npm-debug.log*
yarn-debug.log*

# Testing
coverage/
.nyc_output/
*.test.js.snap

# Azure
.azure/
*.pubxml
*.publishsettings

# Database backups (local only)
*.bak
*.bacpac
*.dacpac

# Temporary files
*.tmp
*.temp
*.cache
.temp/
.tmp/

# OS files
Thumbs.db
.DS_Store
desktop.ini

